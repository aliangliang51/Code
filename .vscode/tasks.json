{
	"version": "2.0.0",
	"tasks": [
	  {
		"type": "cppbuild",
		"label": "C/C++: g++ build active file",  // 此名称用于默认构建任务
		"command": "/usr/bin/g++",               // 确认 g++ 路径（通过 `which g++` 获取）
		"args": [
		  "-fdiagnostics-color=always",
		  "-g",                                 // 生成调试信息
		  "${file}",                             // 当前文件（如 main.cpp）
		  "-o",
		  "${fileDirname}/output/${fileBasenameNoExtension}"  // 输出可执行文件路径
		],
		"options": {
		  "cwd": "${fileDirname}"
		},
		"problemMatcher": ["$gcc"],
		"group": {
		  "kind": "build",
		  "isDefault": true                      // 设为默认构建任务
		},
		"detail": "Task generated by Debugger."
	  }
	]
  }